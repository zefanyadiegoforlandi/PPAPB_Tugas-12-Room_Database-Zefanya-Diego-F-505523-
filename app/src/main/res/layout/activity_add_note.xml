<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.example.room_zefanyadiegof.AddNoteActivity"
    android:background="@color/light_blue">
    <!-- Menetapkan properti tata letak, konteks, dan warna latar belakang aktivitas -->

    <ImageView
        android:id="@+id/edit_img"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="3dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/baseline_edit_24"></ImageView>
    <!-- Menambahkan ikon edit pada bagian atas kiri -->

    <TextView
        android:id="@+id/add_NoteHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:fontFamily="@font/poppins"
        android:text="Buat Note"
        android:layout_marginLeft="40dp"
        android:textColor="@color/gray"
        android:textSize="24sp"
        android:textStyle="bold"></TextView>
    <!-- Menambahkan judul "Make a Note" pada bagian atas kiri -->

    <ImageView
        android:id="@+id/Button_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_cancel_24"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/add_NoteHeading"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="3dp">
    </ImageView>
    <!-- Menambahkan tombol kembali dengan ikon cancel pada bagian atas kanan -->

    <ImageView
        android:id="@+id/Button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_done_24"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/add_NoteHeading"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="3dp">
    </ImageView>
    <!-- Menambahkan tombol simpan dengan ikon done pada bagian atas kanan -->

    <EditText
        android:id="@+id/title_EditText"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:hint="Enter the title"
        android:paddingStart="20dp"
        android:textSize="20sp"
        android:layout_below="@+id/add_NoteHeading"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_description"
        android:maxLines="1"
        android:fontFamily="@font/poppins">
    </EditText>
    <!-- Menambahkan EditText untuk judul dengan latar belakang berbentuk segiempat -->

    <EditText
        android:id="@+id/content_Edit_Text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:hint="Enter the description"
        android:gravity="top"
        android:padding="20dp"
        android:textSize="18sp"
        android:fontFamily="@font/poppins"
        android:layout_below="@id/title_EditText"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_description">
    </EditText>
    <!-- Menambahkan EditText untuk konten dengan latar belakang berbentuk segiempat -->

</RelativeLayout>
